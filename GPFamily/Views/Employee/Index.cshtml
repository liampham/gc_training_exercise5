@model IEnumerable<GPFamily.Models.Employee>

@{
    ViewData["Title"] = "Danh sách thành viên";
}

<h1>Danh sách thành viên</h1>

<p>
    <a asp-action="Create">Thêm mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OfficeLocation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmpCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OfficeLocation)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EmployeeID">Chỉnh Sửa</a> |
                <a asp-action="Details" asp-route-id="@item.EmployeeID">Chi tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.EmployeeID">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
